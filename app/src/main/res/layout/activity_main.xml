<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Chow Mein"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/food1"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@color/purple_200"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input1"
            android:layout_margin="5dp"
            android:background="#DBE86A"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food1"
            android:hint="Serving Size"
            android:inputType="numberDecimal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        app:layout_constraintTop_toBottomOf="@id/first"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Eggplant Tofu"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/food2"
            android:textSize="25sp"
            android:textColor="#EA7979"
            android:background="#8C59FF"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input2"
            android:layout_margin="5dp"
            android:background="#F1D180"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food2"
            android:hint="Serving Size"
            android:inputType="numberDecimal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/third"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Kung Pao Chicken"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/food3"
            android:textSize="25sp"
            android:textColor="#91EDD7"
            android:background="#9730FF"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input3"
            android:layout_margin="5dp"
            android:background="#EFB145"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food3"
            android:hint="Serving Size"
            android:inputType="numberDecimal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourth"
        app:layout_constraintTop_toBottomOf="@id/third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Beijing Beef"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/food4"
            android:textSize="25sp"
            android:textColor="#5C8765"
            android:background="#441F6E"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input4"
            android:layout_margin="5dp"
            android:background="#F49322"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food4"
            android:hint="Serving Size"
            android:inputType="numberDecimal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Total Calories"
        android:background="#90EFE6"
        android:gravity="center"
        android:textColor="#CF1717"
        android:textSize="35sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>